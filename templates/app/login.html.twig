{% extends '@layout/auth.html.twig' %}

{% block content %}

    {% set email = form.get('email') %}
    {% do email.setAttribute('class', 'form-control') %}

    {% set password = form.get('password') %}
    {% do password.setAttribute('class', 'form-control') %}

    {% do form.get('submit').setAttribute('class', 'btn btn-block btn-success').setLabel('Entrar') %}

    {% do form.setAttribute('action', url('auth.login')) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <div class="box box-success">
                {{ form().openTag(form) | raw }}
                <div class="box-body">
                    {% set message = formElementErrors(email, {class: 'help-block'}) %}
                    <div class="form-group {{ message ? 'has-error' }}">
                        {{ formLabel(email) }}
                        {{ formElement(email) }}
                        {{ message | raw }}
                    </div>

                    {% set message = formElementErrors(password, {class: 'help-block'}) %}
                    <div class="form-group {{ message ? 'has-error' }}">
                        {{ formLabel(password) }}
                        {{ formElement(password) }}
                        {{ message | raw }}
                    </div>
                </div>

                <div class="box-footer">
                    <div class="col-xs-12 text-right">
                        {{ formButton(form.get('submit')) }}
                    </div>
                </div>
                {{ form().closeTag() | raw }}
            </div>
        </div>
    </div>
{% endblock %}

{%  block title %}
    Login - {{ parent() }}
{% endblock %}

{%  block page_header %}
    Code E-Mail MKT - Login
{% endblock %}
