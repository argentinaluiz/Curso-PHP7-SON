{% extends '@layout/default.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-xs-6 col-xs-offset-6 col-sm-4 col-sm-offset-8 col-md-3 col-md-offset-9 col-lg-2 col-lg-offset-10">
                        <a href="{{ url('customer.list') }}" class="btn btn-block btn-primary">
                            <i class="fa fa-reply"></i> Voltar
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <form action="{{ url('customer.update', {id: customer.id}) }}" name="form" method="post" role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Nome</label>
                                <input type="text" name="name" id="name" class="form-control" value="{{ customer.name }}">
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="form-control" value="{{ customer.email }}" required>
                            </div>
                        </div>

                        <div class="box-footer">
                            <button class="btn btn-success" type="submit">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{%  block title %}
    Edição de Contato - {{ parent() }}
{% endblock %}

{%  block page_header %}
    Edição de Contato - {{ customer.name }}
{% endblock %}
