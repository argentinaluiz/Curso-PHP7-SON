{% extends '@layout/default.html.twig' %}

{% block title %}Teste{% endblock %}

{% block content %}
    <h2 class="text-center">Lista de clientes</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Cpf</th>
            <th>Endere√ßos</th>
        </tr>
        </thead>

        <tbody>
        {% for cli in clients %}
            <tr>
                <td>{{ cli.client.name }}</td>
                <td>{{ cli.client.email }}</td>
                <td>{{ cli.client.cpf }}</td>
                <td>
                    {{ cli.address }},
                    {{ cli.city }} -
                    {{ cli.state }} -
